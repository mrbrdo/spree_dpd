<% content_for :page_actions do %>
  <% if can?(:fire, order) %>
    <% if order.shipments.first&.tracking %>
      <%=  button_link_to Spree.t(:dpd_label, scope: 'admin.order.events'),
            spree.download_label_admin_dpd_url(order_number: order.number),
            method: :get,
            icon: 'shipping.svg',
            class: 'btn-primary',
            style: 'background-color: black',
            target: '_blank' %>
    <% end %>
  <% end %>
<% end %>
